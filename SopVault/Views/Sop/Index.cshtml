@model  IQueryable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <a asp-controller="Sop" asp-action="CreateDepartment" class="btn">Create</a>
        
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Abbreviation</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td><a asp-controller="Sop" asp-action="Department" asp-route-id="@row.Id">@row.Name</a></td>
                    <td>@row.Abbreviation</td>
                    <td>@row.Documents.Count()</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>